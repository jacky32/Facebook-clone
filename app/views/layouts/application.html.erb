<!DOCTYPE html>
<html>
  <head>
    <title>FacebookClone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if user_signed_in? %>
    <%= render 'layouts/header'%>

    <%# Flash panel %>
    <div id="left-panel">
      <%= turbo_frame_tag "flash" do %>
        <%= render "layouts/flash" %>
      <% end %>
    </div>

    <%# Content %>
    <%= yield %>

    <%= turbo_frame_tag "friends-panel" do %>
      <%= render 'friendships/friend_requests' %>
      <hr>
      <%= render 'friendships/friend_list' %>
    <% end %>

    <%# Chat %>
    <%= turbo_frame_tag "active_chat" do %>
      <%= render "messages/active_chat" %>
    <% end %>

    <%# Edit/delete popup modal %>
    <%= render 'layouts/modal' %>
    <% else %>
      <%= yield %>
    <% end %>
  </body>
</html>
