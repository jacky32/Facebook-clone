<header>
  <div id="header-logo">
      <%= link_to root_path, data: { turbo_frame: "main" } do %>
        <%= show_svg('icons/facebook-circle.svg') %>
      <% end %>
  </div>
  
  <div id="header-middle-options">
    <div id="header-middle-posts">
      <%= link_to 'Home', root_path, data: { turbo_frame: "main" } %>
    </div>
    <div id="header-middle-communities">Communities</div>
  </div>

  <div id="header-right-options">
    <div id="header-right-messages">Messages</div>
    <div id="header-right-notifications">Notifications</div>
    <div id="header-right-profile">
      <%= link_to 'Profile', user_path(current_user), data: { turbo_frame: "main" } %>
    </div>
  </div>
</header>