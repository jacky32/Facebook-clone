<div id="<%= dom_id comment %>" class="comment" data-controller="comment">
  <div class="user-pic"><%= show_svg("avatar.svg") %></div>
  <div class="comment-body">
    <div class="comment-user-name"><%= comment.user.name %></div>
    <div class="comment-text"><%= comment.text %></div>
  </div>
  <div class="comment-edit">Edit</div>
  <div class="comment-actions">
    <div class="comment-like">Like</div>
    <div class="comment-reply" data-action="click->comment#toggleReply">Reply</div>
    <div class="comment-created-at"><%= comment.created_at %></div>
  </div>
  <%= turbo_frame_tag id="new-comment", src:new_comment_comment_path(comment.id), class: 'new-comment-comment hidden', data: { 'comment-target': "reply" } %>
  <div id="<%= dom_id comment%> comments" class="comment-comments">
    <%= render partial: 'comments/comment', collection: comment.comments %>
  </div>
</div>