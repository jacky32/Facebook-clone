<%= form_with model: current_user, data: { controller: "modal", action: "turbo:submit-end->modal#hideModal" } do |form| %>
  <%= fields_for :user_info, current_user.user_info do |f| %>
    <div class="fields">
      <%= f.label :city %>
      <%= f.text_area :city %>
    </div>
    <div class="fields">
      <%= f.label :school %>
      <%= f.text_area :school %>
    </div>
    <div class="fields">
      <%= f.label :workplace %>
      <%= f.text_area :workplace %>
    </div>
    <div class="fields">
      <%= f.label :birthday %>
      <%= f.date_field :birthday %>
    </div>
    <div class="fields">
      <%= f.label :details %>
      <%= f.text_area :details %>
    </div>
    <div class="fields">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, accept: 'image/png, image/jpeg, image/jpg' %>
    </div>
  <% end %>
  <div class="buttons">
    <%= form.submit "Edit", class: "button" %>
    <div class="cancel button" data-action="click->modal#hideModal">Cancel</div>
  </div>
<% end %>