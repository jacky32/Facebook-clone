<div class="post" id="<%= dom_id post %>">
  <div class="post-info">
    <div class="user-pic">Pic</div>
    <div class="user-name"><%= post.user.name %></div>
    <div class="post-date"> <%= post.created_at %></div>
    <div class="post-edit">Edit</div>
  </div>
  <div class="post-body">
    <%= post.text %>
  </div>
  <div class="post-actions">
    <div class="post-likes-number">12 likes</div>
    <div class="post-comments-number">12 comments</div>
  </div>
  <div class="post-buttons">
    <div class="post-like-button">Like</div>
    <div class="post-comment-button">Comment</div>
    <div class="post-share-button">Share</div>
  </div>
  <div class="post-comments">
    <%= turbo_frame_tag id="new-comment", src:new_post_comment_path(post.id) %>
    <div id="<%= dom_id post%> comments" class="comments">
      <% post.comments.each do |comment| %>
        <%= render comment%>
      <% end  %>
    </div>
  </div>
</div>
