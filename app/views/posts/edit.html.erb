<%= turbo_frame_tag id="modal-content" do %>
  <% post = Post.find(params[:id])%>
  <%= form_with model: post, data: { controller: "modal", action: "turbo:submit-end->modal#hideModal" } do |f| %>
    <%= f.text_area :text, value: post.text %>
    <%= f.submit %>
    <div class="cancel" data-controller="modal" action="click->modal#hideModal">Cancel</div>
  <% end %>
<% end %>