<%= turbo_frame_tag id="new-post" do %>
  <div class="user-pic">Usr pic</div>
  <%= form_for @post, data: { controller: "form", action: "turbo:submit-end->form#clear" } do |f| %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.text_area :text %>
    <%= f.submit %>
  <% end %>
<% end %>