<div id="dashboard">
  <%= render 'layouts/header'%>
  <div id="left-panel">
    <%= turbo_frame_tag "flash" do %>
      <%= render "layouts/flash" %>
    <% end %>
  </div>
  <%= turbo_frame_tag "main" do %>
  <%# render content instead of posts, partial: posts xx partial: user %>
    <%= render template: "posts/index" %>
  <% end %>
  <%= turbo_frame_tag "friends-panel" do %>
    <%= render 'layouts/friends_panel' %>
  <% end %>
  <div class="hidden" id="modal-background">
    <div id="modal-box">
      <%= turbo_frame_tag id="modal-content" do %>
        <div class="spinner-background">
          <div class="lds-dual-ring"></div>
        </div>
      <% end %>
    </div>
  </div>
</div>