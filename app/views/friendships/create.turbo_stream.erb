<% if notice %>
  <%= turbo_stream.remove "#{dom_id @friendship}" %>
  <%= turbo_stream.replace "friend-list" do %>
      <%= render partial: "friendships/friend_list" %>
  <% end %>

  <%= turbo_stream.replace "user-actions_#{dom_id @user}" do %>
    <%= render partial: "users/user_actions", locals: { user: @user }%>
  <% end %>
  
  <%= render_turbo_stream_flash_messages %>
<% elsif alert %>
  <%= render_turbo_stream_flash_messages %>
<% end %>