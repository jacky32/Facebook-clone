<% community = Community.find(@id)%>
<% membership = Membership.where(community_id: community.id, member_id: current_user.id).first %>
<div class="user-heading">Do you want to unsend the join request?</div>
<div><%= community.info %></div>
<div class="buttons">
  <%= button_to "Unsend request", memberships_path(membership_id: membership.id, community_id: @id, request_unsend: true), class: "button delete", data: { controller: "modal", action: "click->modal#hideModal" } %>
  <div class="button cancel" data-controller="modal" data-action="click->modal#hideModal">Cancel</div>
</div>