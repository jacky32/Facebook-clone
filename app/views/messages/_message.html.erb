<% if message.sender == current_user %>
  <div class="message-sent">
    <div class="message-body"><%= message.body %></div>
  </div>
<% else %>
  <div class="message-received">
    <div class="message-received-avatar">
      <%= image_tag message.sender.get_profile_picture %>
    </div>
    <div class="message-body"><%= message.body %></div>
  </div>
<% end %>