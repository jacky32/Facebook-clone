
<% if current_user.last_chat_id_opened.nil? %>
  <%= turbo_frame_tag id="chat", class:"minimized hidden" do %>
    <div class="chat-header">
    <div class="friend-avatar">
      <%= show_svg('avatar.svg')%>
    </div>
    <div class="friend-name"></div>
    <div class="chat-header-icon" data-controller="chat" data-action="click->chat#minimizeChat">
      <%= show_svg('icons/remove-outline.svg')%>
    </div>
    <div class="chat-header-icon" data-controller="chat" data-action="click->chat#hideChat">
      <%= show_svg('icons/close.svg')%>
    </div>
  </div>
  <div class="messages"> </div>
  <div class="new-message">
    <div class="new-message-text"></div>
    <div class="new-message-send">
      <%= show_svg('icons/arrow-circle-right.svg') %>
    </div>
  </div>
  <% end %>
<% else %>
  <%= turbo_frame_tag id="chat", class:"minimized", src: chat_path(current_user.last_chat_id_opened) do %>
    <div class="chat-header">
      <div class="friend-avatar">
        <%= show_svg('avatar.svg')%>
      </div>
      <div class="friend-name"></div>
      <div class="chat-header-icon" data-controller="chat" data-action="click->chat#minimizeChat">
        <%= show_svg('icons/remove-outline.svg')%>
      </div>
      <div class="chat-header-icon" data-controller="chat" data-action="click->chat#hideChat">
        <%= show_svg('icons/close.svg')%>
      </div>
    </div>
    <div class="messages">
      <div class="message-sent">
        <div class="message-body">           </div>
      </div>
      <div class="message-received">
        <div class="message-received-avatar">
        </div>
        <div class="message-body">           </div>
      </div>
    </div>
    <div class="new-message">
      <div class="new-message-text"></div>
      <div class="new-message-send">
        <%= show_svg('icons/arrow-circle-right.svg') %>
      </div>
    </div>
  <% end %>
<% end %>
